            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${workspace_folder}/experiment_ros2bag/scripts/process_bag.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "<bag directory>",
            ]
